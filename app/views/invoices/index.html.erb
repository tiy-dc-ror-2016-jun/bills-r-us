<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Total in cents</th>
      <th>Total tax in cents</th>
      <th>Subtotal in cents</th>
      <th>Tax rate</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.total_in_cents %></td>
        <td><%= invoice.total_tax_in_cents %></td>
        <td><%= invoice.subtotal_in_cents %></td>
        <td><%= invoice.tax_rate %></td>
        <td><%= invoice.comments %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


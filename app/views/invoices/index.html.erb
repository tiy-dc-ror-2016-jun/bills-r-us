<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>
        id
      </th>
      <th>Total in cents</th>
      <th>Total tax in cents</th>
      <th>Subtotal in cents</th>
      <th>Tax rate</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <%= render invoice %>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @invoices %>


<div class="new-invoice-form-wrapper">

</div>
<% if current_user.sales? %>
  <%= link_to 'New Invoice', new_invoice_path, remote: true %>
<% end %>
